{
  "name": "Exosphere",
  "version": "0.1.0",
  "description": "",
  "main": "exacore.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=always",
"build": "electron-packager ./ --platform=all --arch=x64"
  },
  "repository": "https://github.com/sineflex/Exosphere",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author":{
    "name": "sineflex",
    "email": "github@pstar7.rf.gd",
    "url": "https://github.com/sineflex"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^2.0.6",
    "electron-builder": "^20.28.4"
  },
  "dependencies": {
    "async": "^2.6.1",
    "electron-packager": "^12.1.0",
    "update-electron-app": "^1.3.0"
  },
  "build": {
    "appId": "com.sineflex.exosphere",
    "productName": "Exosphere",
    "files": [
      "dist/",
      "node_modules/",
      "exoview.html",
      "exacore.js",
      "package.json"
    ],
    "dmg": {
      "format": "ULFO",
      "window": {
        "width": "500",
        "height": "300"
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage",
        "apk"
      ],
      "category": "Video"
    }
}
